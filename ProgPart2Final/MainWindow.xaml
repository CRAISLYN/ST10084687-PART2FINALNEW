                HorizontalAlignment="Left"
                Margin="322,170,0,0"
                VerticalAlignment="Top"
                Height="47"
                Width="92"
                Click="Button_Click"
                FontFamily="Arial Rounded MT Bold"
                FontSize="20" />
        <Label Content="Student Time Management Program"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Height="48"
               Width="460"
               FontFamily="Arial Rounded MT Bold"
               FontSize="24" />
        <Label Content="Education is the most powerful weapon which you can use to change the world. ~ Nelson Mandela "
               HorizontalAlignment="Center"
               Margin="0,312,0,0"
               VerticalAlignment="Top"
               Width="716"
               FontSize="14"
               FontFamily="Arial Rounded MT Bold"
               FontWeight="Bold" />

    </Grid>
</Window>

